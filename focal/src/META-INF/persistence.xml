<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="focal" transaction-type="JTA">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<class>org.persistence.Bus</class>
		<class>org.persistence.Driver</class>
		<class>org.persistence.ReachTimeEvening</class>
		<class>org.persistence.ReachTimeMorning</class>
		<class>org.persistence.Route</class>
		<class>org.persistence.Stop</class>
		<class>org.persistence.Trip</class>
		<class>org.persistence.User</class>
		<properties>
			<property name="eclipselink.ddl-generation" value="create-tables"/>
		</properties>
	</persistence-unit>
</persistence>
